@model scım.Models.User

@{
    ViewData["Title"] = "Yeni Kullanıcı Oluştur";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-plus"></i> Yeni Kullanıcı Oluştur
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UserName" class="control-label">Kullanıcı Adı *</label>
                                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adını giriniz" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label">E-posta *</label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresini giriniz" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="control-label">Ad *</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Adını giriniz" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="control-label">Soyad *</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Soyadını giriniz" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="control-label">Telefon</label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon numarasını giriniz" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Department" class="control-label">Departman</label>
                                    <input asp-for="Department" class="form-control" placeholder="Departman adını giriniz" />
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="JobTitle" class="control-label">Pozisyon</label>
                                    <input asp-for="JobTitle" class="form-control" placeholder="Pozisyon adını giriniz" />
                                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>SCIM Entegrasyonu:</strong> Bu kullanıcı oluşturulduktan sonra otomatik olarak yapılandırılmış bulut servislerine (Azure AD, Okta, Google Workspace) senkronize edilecektir.
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Kullanıcı Oluştur
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Real-time validation
            $('#UserName').on('blur', function () {
                var userName = $(this).val();
                if (userName.length > 0) {
                    // You can add AJAX call here to check if username exists
                }
            });

            $('#Email').on('blur', function () {
                var email = $(this).val();
                if (email.length > 0) {
                    // You can add AJAX call here to check if email exists
                }
            });
        });
    </script>
}
